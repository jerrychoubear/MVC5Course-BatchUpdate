@model IEnumerable<MVC5Course.Models.Client>

@{
    ViewBag.Title = "BatchUpdate";
}

<h2>BatchUpdate</h2>

@using (Html.BeginForm("BatchUpdate", "Clients", FormMethod.Post))
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreditRating)
            </th>
        </tr>

        @{
            var items = Model.ToArray();
        }

        @for (var i = 0; i < items.Length; i++)
        {
            <tr>
                <td>
                    @Html.HiddenFor(modelItem => items[i].ClientId)
                    @Html.EditorFor(modelItem => items[i].FirstName)
                    @Html.ValidationMessageFor(modelItem => items[i].FirstName, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.EditorFor(modelItem => items[i].MiddleName)
                    @Html.ValidationMessageFor(modelItem => items[i].MiddleName, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.EditorFor(modelItem => items[i].LastName)
                    @Html.ValidationMessageFor(modelItem => items[i].LastName, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => items[i].Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => items[i].DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => items[i].CreditRating)
                </td>
            </tr>
        }

    </table>

    <button class="btn btn-success">批次執行</button>
}
